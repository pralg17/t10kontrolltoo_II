package Jogi;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

/**
 * Created by tatja on 4/20/2017.
 */
public class Proov1 {
    public static void main(String[] args) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));

        Jogi jogi1 = new Jogi("Sinine", 100, 300, null, 75);
        Jogi jogi2 = new Jogi("Kollane", 200, 500, jogi1, 0);

        System.out.println("Esimese jõe nimetus on " + jogi1.nimetus);
        System.out.println("Teise joe nimetus on " + jogi2.nimetus);

        System.out.println("Kui te soovite alustada teed merre Sinise jõe allikast, sisesta 1");
        System.out.println("Kui te soovite alustada teed merre Kollase jõe allikast, sisesta 2");
        System.out.println("Kui te soovite alustada teed merre kohast, kus üks jõgi valab teise sisse, sisesta 3");
        String a = reader.readLine();
        int b = Integer.parseInt(a);

        if (b == 1) {
            System.out.println("Jõgi läheb läbi" +jogi1.nimetus+"  jõgi ja " +jogi2.nimetus+ "suudme.");
        } else if (b == 2) {
            System.out.println("Jõgi läheb läbi "+jogi2.nimetus+" ja "+jogi1.nimetus+" jõed");
        } else if (b == 3) {
            System.out.println("Jõgi läheb läbi "+jogi1.nimetus+" jõgi");
        } else {
            System.out.println("Viga! Te sisestasite vale number.");
        }


    }
}
